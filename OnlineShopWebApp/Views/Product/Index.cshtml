@model ProductViewModel

<div class="row">

    <div class="col-3">
        <div class="card shadow">
            <img src="@Model.ImagePath" class="card-img-top" alt="картинка товара @Model.Name">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h5>@Model.Cost руб.</h5>
                <h5>@Model.Description</h5>
                <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-dark" href="/cart/add?productId=@Model.Id" role="button">Добавить в корзину</a>
            </div>
        </div>
    </div>
</div>