@model List<ProductViewModel>
@{
    ViewData["Title"] = "Favorite";
}
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3">
            <div class="card shadow">
                <img src="@product.ImagePath" class="card-img-top" alt="картинка товара @product.Name">
                <div class="card-body">
                    <a style="color:black" asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                        <h5 class="card-title">@product.Name</h5>
                    </a>
                    <h5>@product.Cost руб.</h5>
                    <a class="btn-primary btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" role="button">Добавить в корзину</a>
                    <a class="btn-primary btn-success" asp-area="" asp-controller="Favorite" asp-action="Remove" asp-route-productId="@product.Id" role="button">Удалить из избранного</a>
                </div>
            </div>
        </div>
    }
</div>