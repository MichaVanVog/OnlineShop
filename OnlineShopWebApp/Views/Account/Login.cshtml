@model Login
<form method="post">
    <div>
        <h3>Вход</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

    <div class="row">
        <div class="col-6">
            <label asp-for="Username"></label><br />
            <input class="form-control" type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Password"></label><br />
            <input class="form-control" type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label>Запомнить меня?</label>
            <input class="form-control" type="checkbox" name="rememberMe" value="true" />
            <a class="form-cotroller" asp-controller="Account" asp-action="Registr" asp-route-ReturnUrl="@Model.ReturnUrl" >Регистрация нового пользователя</a>
        </div>
    </div>
    <div class="col">
        <button type="submit" asp-controller="Account" asp-action="Login">Войти</button>
    </div>
</form>