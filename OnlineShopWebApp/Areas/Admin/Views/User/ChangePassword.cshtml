@model ChangePassword

<form method="post">
    <div>
        <h3>Редактирование продукта</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <input type="hidden" name="userName" value="@Model.Username"/>

    <div class="row">
        <div class="col-6">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="ConfirmPassword"></label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
    </div>
    <div class="col">
        <button type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Сохранить</button>
    </div>
</form>