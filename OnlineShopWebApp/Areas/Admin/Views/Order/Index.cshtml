@model List<OrderViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-9">
        <h3>Заказы</h3>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Дата</th>
                        <th>Время</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Model[i].Cost</td>
                            <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                            <td>@Model[i].CreatedDateTime.ToString("d")</td>
                            <td>@Model[i].CreatedDateTime.ToString("t")</td>
                            <td><a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model[i].Id">Подробнее</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>